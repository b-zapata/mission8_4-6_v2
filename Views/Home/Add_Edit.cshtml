@{
}

@model Todo

@{
    ViewData["Title"] = "Create Task";
}

<style>
    body {
        background-color: #f0f0f0; /* Light Gray */
    }

    .navbar {
        background-color: #cfe8f3; /* Pastel Blue */
    }

    .jumbotron {
        background-color: #f0e8d4; /* Light Beige */
        border-radius: 15px;
        padding: 20px;
        margin: 20px;
    }

    .row {
        display: flex;
        justify-content: center;
        margin: 20px 0;
    }

    .col-md-4 {
        background-color: #cfe8f3; /* Pastel Blue */
        border-radius: 15px;
        padding: 20px;
        margin: 10px;
    }

    .form-container {
        background-color: #cfe8f3; /* Light Beige */
        border-radius: 15px;
        padding: 20px;
        margin: 20px;
    }

    .form-group {
        margin-bottom: 20px;
    }
</style>

<h2>@ViewData["Title"]</h2>
<br />
<div class="form-container">
    <form asp-action="CreateTask" method="post">
        <div class="form-group">
            <label asp-for="TodoName">Task:</label>
            <input asp-for="TodoName" class="form-control" required />
            <span asp-validation-for="TodoName" class="text-danger"></span>
        </div>
        <p>Due Date:</p>
        <div class="form-group">
            <label asp-for="Day">Day:</label>
            <input asp-for="Day" class="form-control" placeholder="DD" required />
            <span asp-validation-for="Day" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Month">Month:</label>
            <input asp-for="Month" class="form-control" placeholder="MM" required />
            <span asp-validation-for="Month" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Year">Year:</label>
            <input asp-for="Year" class="form-control" placeholder="YYYY" required />
            <span asp-validation-for="Year" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Category">Category:</label>
            <select asp-for="CategoryId">
                <option value="">-- Select Category --</option>
                @foreach (Category cat in ViewBag.Categories)
                {
                    <option value="@cat.CategoryId">@cat.CategoryName</option>
                }
            </select>
            <span asp-validation-for="CategoryId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Urgent">Urgent:</label>
            <input type="checkbox" class="form-check-input" checked="@(Model.Completed ?? false)" />
            <input type="hidden" asp-for="Completed" /> <!-- Include hidden input for model binding -->
        </div>
        <div class="form-group">
            <label asp-for="Important">Important:</label>
            <input type="checkbox" class="form-check-input" checked="@(Model.Completed ?? false)" />
            <input type="hidden" asp-for="Completed" /> <!-- Include hidden input for model binding -->
        </div>
        <div class="form-group">
            <label asp-for="Completed">Completed:</label>
            <input type="checkbox" class="form-check-input" checked="@(Model.Completed ?? false)" />
            <input type="hidden" asp-for="Completed" /> <!-- Include hidden input for model binding -->
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </form>
</div>
